<%= simple_form_for @cooperative do |f| %>
  <%= f.input :name, label: t('cooperative.name') %>
  <%= f.button :submit, t('cooperative.update') %>
<% end %>

<h1><%= t('activities.header') %></h1>

<table class='table'>
  <thead>
    <tr>
      <th><%= t('activities.name') %></th>
      <th><%= t('activities.activated') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr class='<%= activated_row_class(activity.activated) %>'>
        <td><%= activity.name %></td>
        <td><%= activity.activated %></td>
        <td><%= link_to t('activities.edit'), edit_activity_path(activity) %></td>
        <td><%= link_to deactivate_link(activity.activated), activity_deactivate_path(activity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('activities.new'), new_activity_path, input_html = {class: 'btn btn-default'} %>
