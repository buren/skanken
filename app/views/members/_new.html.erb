<%= form_for :member, url: members_path do |f| %>
  <div class="form-group">
     <label>Name</label>
    <%= f.text_field :name, :placeholder => "Enter email", :class => "form-control" %><br>
  </div>

  <div class="form-group">
     <label>Mobile</label>
    <%= f.text_field :mobile, :placeholder => "Enter mobile number", :class => "form-control" %><br>
  </div>

  <div class="form-group">
     <label>Name</label>
    <%= f.text_field :email, :placeholder => "Enter email", :class => "form-control" %><br>
  </div>
  <%= f.submit :class => "btn btn-default" %>
  <button class="btn btn-default" type="submit" id="cancel_member_button">Cancel</button>
<% end %>