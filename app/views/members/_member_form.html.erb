<%= simple_form_for form_for, url: path do |f| %>
  <%= f.input :name  %>
  <%= f.input :mobile %>
  <%= f.input :email, required: false %>
  <%= f.input :personId, label: "Date of birth", required: false %>
  <%= f.input :activities, label: "Interested in working with", as: :check_boxes, collection: Cooperative.activities(current_user.cooperative_id) %>
  <%= f.input :comment, label: 'Comment', required: false, as: :text %>
  <%= f.button :submit %>
<% end %>