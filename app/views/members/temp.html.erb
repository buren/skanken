<%= link_to 'Edit', edit_member_path(@member) %>
<%= link_to 'Delete', member_path(@member),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>

<!-- kommer ej ihag vad detta e for -->
<h1>Editing member</h1>
 
<%= form_for @member, url: member_path(@member) do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :mobile %><br>
    <%= f.text_field :mobile %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :personId %><br>
    <%= f.text_field :personId %>
  </p>

  <p>
    <%= f.label :work %><br>
    <%= f.text_field :work %>
  </p>

  <p>
    <%= f.label :term %><br>
    <%= f.text_field :term %>
  </p>

  <p>
    <%= f.label :workCard %><br>
    <%= f.text_field :workCard %>
  </p>

  <p>
    <%= f.label :dateAdded %><br>
    <%= f.text_field :dateAdded %>
  </p>

  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </p>

  <p>
    <%= f.submit :value => "Update Worker" %>
  </p>
 
<% end %>
 
