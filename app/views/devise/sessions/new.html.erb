<h1></h1>

<div class="row">
  <div class="col-xs-4 col-md-4">
	<h2>Log in</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, required: false, autofocus: true %>
	    <%= f.input :password, required: false %>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	</div>

	  <div class="form-actions">
	    <%= f.button :submit, "Log in" %>
	    <p>
	    <%= render "devise/shared/links" %>
	    </p>	
	 </div>
	<% end %>
   </div>

<div class="col-xs-8 col-md-1">
</div>
<div class="col-xs-8 col-md-7">
	  <h2>Create cooperative</h2>
	  <p>If you wish to sign up for a already existing cooperative please contact the cooperative.</p>
	  <p><a class="btn btn-primary btn-lg" href=<%=new_registration_path(resource_name) %> role="button">Create cooperative</a></p>

</div>

