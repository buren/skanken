<%= simple_form_for :account, url: cooperative_accounts_path(@cooperative) do |f| %>
  <%= f.input :email%>
  <%= f.input :password  %>
  <%= f.input :role, as: :radio_buttons, collection: User.cooperative_roles, label: 'User role', hint: 'A cooperative_admin has the same rights to edit the cooperative as you. A foreman can view and add workers.' %>
  <%= f.button :submit  %>
<% end %>          

