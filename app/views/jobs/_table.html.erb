<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Activity</th>
      <th>Comment</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @member.jobs.each do |job| %>
      <tr>
        <td><%= job.date %></td>
        <td><%= job.activity %></td>
        <td>
          <% if job.comment %>
            <%= job.comment %>
          <% end %>
        </td>
        <td> <%= link_to 'Delete', [job.member, job],
             method: :delete,
             data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>